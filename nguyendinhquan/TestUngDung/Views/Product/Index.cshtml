                <script src="https://123click.org/js/jquery-1.10.2.js"></script>
                <script language="javascript">
                    function Rate(value) {
                        if (value == null)
                            return "";
                        else if (value == 1)
                            return "Bình thường";
                        else if (value == 2)
                            return "ngon";
                        else if (value == 3)
                            return "rất ngon";
                        else if (value == 4)
                            return "tuyệt vời";
                        else if (value == 5)
                            return "rất tuyệt vời";
                    }
                    function Rating() {
                        $('#rateit_star').rateit({ min: 0, max: 5, step: 1 });
                        $('#rateit_star').bind('rated', function (e) {
                            var value = $(this).rateit('value');
                            a = $('#mainbody_contentbody_hdRating').val(value);
                        });
                        $('#rateit_star').bind('over', function (event, value) {
                            $('#rateit_txt').text(Rate(value));
                        });
                        $('.rateit').rateit({ max: 5, step: 1 });
                    }
                    Rating();


                </script>
                <script src="https://123click.org/js/rate/jquery.rateit.min.js"></script>
